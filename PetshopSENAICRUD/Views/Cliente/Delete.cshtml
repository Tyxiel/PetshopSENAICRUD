@model PetshopSENAICRUD.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<h1 class="my-4">Excluir Cliente</h1>

<div class="alert alert-warning">
    <h4>Tem certeza de que deseja excluir este cliente?</h4>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Cliente: @Model.Nome</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Endereço</dt>
            <dd class="col-sm-9">@Model.Endereco</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Telefone</dt>
            <dd class="col-sm-9">@Model.Telefone</dd>

            <dt class="col-sm-3">Preferência</dt>
            <dd class="col-sm-9">@Model.IdPreferenciaNavigation.Descricao</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="IdCliente" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar à lista</a>
</form>
