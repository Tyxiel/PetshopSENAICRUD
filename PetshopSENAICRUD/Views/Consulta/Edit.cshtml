@model PetshopSENAICRUD.Models.Consultum

@{
    ViewData["Title"] = "Editar Consulta";
}

<h1 class="my-4">Editar Consulta</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Altere os detalhes da consulta</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdConsulta" />

            <div class="form-group">
                <label asp-for="Data" class="control-label">Data</label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdStatus" class="control-label">Status</label>
                <select asp-for="IdStatus" class="form-control" asp-items="ViewBag.IdStatus"></select>
                <span asp-validation-for="IdStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdAnimal" class="control-label">Animal</label>
                <select asp-for="IdAnimal" class="form-control" asp-items="ViewBag.IdAnimal"></select>
                <span asp-validation-for="IdAnimal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdVeterinario" class="control-label">Veterinário</label>
                <select asp-for="IdVeterinario" class="form-control" asp-items="ViewBag.IdVeterinario"></select>
                <span asp-validation-for="IdVeterinario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar à lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
