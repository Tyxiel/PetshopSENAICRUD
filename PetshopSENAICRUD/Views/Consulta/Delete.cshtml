@model PetshopSENAICRUD.Models.Consultum

@{
    ViewData["Title"] = "Excluir Consulta";
}

<h1 class="my-4">Excluir Consulta</h1>

<h3>Tem certeza de que deseja excluir esta consulta?</h3>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Informações da consulta</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Data)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Data)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdAnimalNavigation)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.IdAnimalNavigation.Especie)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdStatusNavigation)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.IdStatusNavigation.Descricao)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdVeterinarioNavigation)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.IdVeterinarioNavigation.Crmv)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdConsulta" />
    <button type="submit" class="btn btn-danger">Excluir</button> |
    <a asp-action="Index" class="btn btn-secondary">Voltar à lista</a>
</form>
