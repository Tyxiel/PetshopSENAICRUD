@model IEnumerable<PetshopSENAICRUD.Models.Animal>

@{
    ViewData["Title"] = "Animais";
}

<div class="container">
    <h1 class="text-center">Lista de Animais</h1>
    <p class="text-right">
        <a asp-action="Create" class="btn btn-primary">Cadastrar Novo Animal</a>
    </p>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Nome</th>
                <th>Espécie</th>
                <th>Raça</th>
                <th>Idade</th>
                <th>Email do Dono</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Especie</td>
                    <td>@item.Raca</td>
                    <td>@item.Idade</td>
                    <td>@item.IdClienteNavigation?.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdAnimal" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdAnimal" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.IdAnimal" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
