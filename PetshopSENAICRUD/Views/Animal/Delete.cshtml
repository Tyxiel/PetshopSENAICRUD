@model PetshopSENAICRUD.Models.Animal

@{
    ViewData["Title"] = "Excluir Animal";
}

<div class="container">
    <h1 class="text-center">Excluir Animal</h1>
    <hr />
    <h3>Tem certeza que deseja excluir este animal?</h3>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <dl class="row">
                <dt class="col-sm-4">Nome</dt>
                <dd class="col-sm-8">@Model.Nome</dd>

                <dt class="col-sm-4">Espécie</dt>
                <dd class="col-sm-8">@Model.Especie</dd>

                <dt class="col-sm-4">Raça</dt>
                <dd class="col-sm-8">@Model.Raca</dd>

                <dt class="col-sm-4">Idade</dt>
                <dd class="col-sm-8">@Model.Idade</dd>

                <dt class="col-sm-4">Email do Dono</dt>
                <dd class="col-sm-8">@Model.IdClienteNavigation?.Email</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdAnimal" />
                <input type="submit" value="Excluir" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Voltar para a lista</a>
            </form>
        </div>
    </div>
</div>
