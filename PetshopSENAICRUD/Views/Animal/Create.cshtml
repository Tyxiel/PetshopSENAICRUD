@model PetshopSENAICRUD.Models.Animal

@{
    ViewData["Title"] = "Cadastrar Animal";
}

<div class="container">
    <h1 class="text-center">Cadastrar Animal</h1>
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Especie" class="control-label">Espécie</label>
                    <input asp-for="Especie" class="form-control" />
                    <span asp-validation-for="Especie" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Raca" class="control-label">Raça</label>
                    <input asp-for="Raca" class="form-control" />
                    <span asp-validation-for="Raca" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Idade" class="control-label">Idade</label>
                    <input asp-for="Idade" class="form-control" />
                    <span asp-validation-for="Idade" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdCliente" class="control-label">Dono</label>
                    <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                    <span asp-validation-for="IdCliente" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Voltar para a lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
